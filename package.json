{
  "name": "bones",
  "version": "1.0.0",
  "private": true,
  "description": "Minimal front end boilerplate and framework.",
  "author": {
    "name": "thezimmee",
    "email": "thezimmee@gmail.com",
    "url": "https://github.com/thezimmee/bones"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/thezimmee/bones/issues"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "pug": "node lib/pug.js",
    "build:pug": "npm run pug -- $(find ./src -name '*.pug') --type=build",
    "watch": "echo 'Watching all files...' && npm run watch:pug & npm run watch:data",
    "watch:pug": "onchange './src/**/*.html.pug' -- npm run pug -- {{changed}} --changed='{{changed}}'",
    "watch:data": "onchange 'archie.config.js' 'src/**/*.data.js' -- npm run pug -- $(find ./src -name '*.pug') --changed='{{changed}}'",
    "build:sass": "node-sass ./src/app.scss --output-style=expanded --indent-type=tab --indent-width=1 --source-map=true --output=build/ --precision=5",
    "build:prod:sass": "node-sass ./src/app.scss --precision=5 | csso --output ./build/app.css",
    "postbuild:sass": "postcss ./build/app.css --output ./build/app.css --use autoprefixer --map ./build/app.css.map",
    "watch:sass": "onchange './src/app.scss' -- npm run build:sass",
    "build:stylus": "stylus ./src/app.styl --out ./build/app.css --compress",
    "postbuild:stylus": "postcss ./build/app.css --output ./build/app.css --use autoprefixer --map ./build/app.css.map",
    "watch:stylus": "onchange './src/app.styl' -- npm run build:stylus",
    "build:js": "browserify ./src/app.js --debug | exorcist ./build/app.js.map > ./build/app.js",
    "build:prod:js": "browserify ./src/app.js --outfile 'uglifyjs -mc > ./build/app.js'",
    "watch:js": "watchify ./src/app.js --debug --outfile 'exorcist ./build/app.js.map > ./build/app.js' -v",
    "old:pug": "pug --obj ./archie.config.js --out build --basedir ./src",
    "old:rename": "find . -name '*.html.html' -exec bash -c 'mv $0 ${0%.html.html}.html' {} \\;",
    "oldest:rename": "for file in build/**/*.html.html; do mv \"$file\" \"${file%.html.html}.html\" && echo '  renamed to '\"${file%.html.html}.html\"; done; echo ''"
  },
  "main": "index.js",
  "dependencies": {},
  "devDependencies": {
    "angular": "^1.6.4",
    "autoprefixer": "^6.7.7",
    "browserify": "^14.3.0",
    "chalk": "^1.1.3",
    "csso-cli": "^1.0.0",
    "exorcist": "^0.4.0",
    "fs-extra": "^3.0.0",
    "jstransformer-markdown-it": "^2.0.0",
    "minimist": "^1.2.0",
    "node-sass": "^4.5.2",
    "onchange": "^3.2.1",
    "pinkie-promise": "^2.0.1",
    "postcss-cli": "^3.2.0",
    "pug": "^2.0.0-beta.12",
    "stylus": "^0.54.5",
    "uglify-js": "^2.8.22",
    "watchify": "^3.9.0"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:thezimmee/bones.git"
  },
  "keywords": [
    "static, site, generator, front, end, css, framework"
  ]
}
