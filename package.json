{
  "name": "bones",
  "version": "1.0.0",
  "private": true,
  "description": "Minimal front end boilerplate and framework.",
  "author": {
    "name": "thezimmee",
    "email": "thezimmee@gmail.com",
    "url": "https://github.com/thezimmee/bones"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/thezimmee/bones/issues"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "pug": "node lib/pug.js",
    "build:pug": "npm run pug -- $(find ./src -name '*.pug') --type=build",
    "watch": "echo 'Watching all files...' && npm run watch:pug & npm run watch:data",
    "watch:pug": "onchange './src/**/*.html.pug' -- npm run pug -- {{changed}} --changed='{{changed}}'",
    "watch:data": "onchange 'archie.config.js' 'src/**/*.data.js' -- npm run pug -- $(find ./src -name '*.pug') --changed='{{changed}}'",
    "old:pug": "pug --obj ./archie.config.js --out build --basedir ./src",
    "old:rename": "find . -name '*.html.html' -exec bash -c 'mv $0 ${0%.html.html}.html' {} \\;",
    "oldest:rename": "for file in build/**/*.html.html; do mv \"$file\" \"${file%.html.html}.html\" && echo '  renamed to '\"${file%.html.html}.html\"; done; echo ''"
  },
  "main": "index.js",
  "dependencies": {},
  "devDependencies": {
    "chalk": "^1.1.3",
    "fs-extra": "^3.0.0",
    "jstransformer-markdown-it": "^2.0.0",
    "minimist": "^1.2.0",
    "onchange": "^3.2.1",
    "pinkie-promise": "^2.0.1",
    "pug": "^2.0.0-beta.12"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:thezimmee/bones.git"
  },
  "keywords": [
    "static, site, generator, front, end, css, framework"
  ]
}
